<h1><%= @article.title%></h1>
<p><%= @article.body%></p>

<ul>

<li>  <a href = "/articles/<%= @article.id%>/edit">Edit</a> </li>

<li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>

<li> <%= link_to "Back" ,"/"%></li>
</ul>


<h2>Comments</h2>
<% @article.comments.each do |comment|%>
<p>
<strong>Commenter:</strong>
<%=comment.commenter%>
</p>
<p>
<strong>Comment:</strong>
<%= comment.body%>
</p>

<p>
<%= link_to "Delete comment","/articles/#{comment[:article_id]}/comments/#{comment[:id]}", data:{turbo_method: :delete, turbo_confirm: "Are u suresfdwefwearw?"}%>
<%end%>
</p>

<h2>Add a Comment</h2>
<%= form_with model: [@article, @article.comments.build] do |form |%>

<p>
<%= form.label :commenter %>
<%= form.text_area :commenter%>
</p>
<p>
<%=form.label :body%>
<%= form.text_area :body%>
</p>
<p>
<%= form.submit%>
</p>
<%end%>